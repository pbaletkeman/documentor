{
  "llm_models": [
    {
      "name": "llamacpp",
      "baseUrl": "http://localhost:8080/completion",
      "maxTokens": 2048,
      "timeoutSeconds": 90
    }
  ],
  "output_settings": {
    "output_directory": "./docs",
    "format": "markdown",
    "generate_mermaid": true,
    "generate_plantuml": false,
    "verbose_output": false
  },
  "analysis_settings": {
    "include_private_members": false,
    "max_depth": 4,
    "included_patterns": [
      "**/*.java",
      "**/*.py"
    ],
    "excluded_patterns": [
      "**/test/**",
      "**/target/**",
      "**/__pycache__/**",
      "**/node_modules/**",
      "**/.git/**",
      "**/build/**",
      "**/.idea/**",
      "**/.vscode/**"
    ]
  }
}
