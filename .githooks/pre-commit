#!/bin/sh
# ğŸ”§ Pre-commit hook for Documentor project
# Runs unit tests and linting before allowing commits

echo "ğŸš€ Running pre-commit checks..."

# Check if we're in a git repository
if ! git rev-parse --git-dir > /dev/null 2>&1; then
    echo "âŒ Not in a git repository"
    exit 1
fi

# Run Checkstyle linting
echo "ğŸ” Running Checkstyle..."
if ! ./gradlew checkstyleMain checkstyleTest; then
    echo "âŒ Checkstyle failed. Please fix the issues and try again."
    exit 1
fi

# Run unit tests
echo "ğŸ§ª Running unit tests..."
if ! ./gradlew test; then
    echo "âŒ Unit tests failed. Please fix the issues and try again."
    exit 1
fi

# Check test coverage
echo "ğŸ“Š Checking test coverage..."
if ! ./gradlew jacocoTestCoverageVerification; then
    echo "âš ï¸ Test coverage below threshold. Consider adding more tests."
    echo "ğŸ“ˆ View coverage report: build/reports/jacoco/test/html/index.html"
    # Don't fail the commit for coverage, just warn
fi

echo "âœ… All pre-commit checks passed!"
exit 0